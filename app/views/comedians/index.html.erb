<h1>The Funniest People Around!</h1>
<section id="statistics">
  <h2>Statistics</h2>
  <p>Average Age: <%= @average_age.to_i %></p>
  <p>Representin':
    <% @comedians.all_birthplaces.each do |birthplace| %>
    <ul>
      <li><%= birthplace %></li>
    </ul>
    <% end %>
</section>
<div id="comedians-container">
  <% @comedians.each do |comedian| %>
    <section class="comedian-box" id="comedian-<%= comedian.id %>">
      <img class="comedian-image" src="<%= comedian.image_url %>" alt="<%= comedian.name %>"></img>
      <h2><%= link_to comedian.name, "/comedians/#{comedian.id}" %></h2>
      <p>Age: <%= comedian.age %></p>
      <p>Birthplace: <%= comedian.birthplace %></p>
      <p>Specials:
        <% comedian.specials.each do |special| %>
        <ul>
          <li><%= special.name %> - <%= special.runtime_mins %> minutes</li>
        </ul>
        <% end %>
         Total Specials: <%= comedian.specials_count %>
      </p>
    </section>
  <% end %>
</div>
